<!DOCTYPE html>
<html lang="nb" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <link href="/css/output.css" rel="stylesheet" />
    <title>Treningsundersøkelse - Del 1</title>
  </head>
  <body class="min-h-screen bg-base-300">
    <div class="w-full md:container md:mx-auto p-2 md:p-6 md:max-w-2xl">
      <div class="card bg-base-100 shadow-xl min-h-[calc(100vh-1rem)]">
        <div class="card-body p-4 md:p-6">
          <h1
            class="card-title text-xl md:text-2xl font-bold text-center mb-4 sm:mb-6"
          >
            Treningsundersøkelse - Del 1
          </h1>

          <div class="w-full bg-base-200 rounded-full h-2.5 mb-4 sm:mb-6">
            <div
              id="progressBar"
              class="bg-primary h-2.5 rounded-full transition-all duration-300"
              style="width: 33%"
            ></div>
          </div>

          <form
            id="treningForm"
            class="space-y-6"
            action="/survey/page1"
            method="POST"
          >
            <div class="form-control">
              <label class="label mb-2">
                <span class="label-text text-base sm:text-lg"
                  >Hvor ofte trener du i løpet av en uke?</span
                >
              </label>
              <div class="grid grid-cols-2 sm:flex gap-2 justify-center">
                <input
                  type="radio"
                  name="treningFrekvens"
                  value="aldri"
                  class="hidden peer/aldri"
                  required
                  id="freq-aldri"
                />
                <label
                  for="freq-aldri"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/aldri:btn-primary"
                  >Aldri</label
                >

                <input
                  type="radio"
                  name="treningFrekvens"
                  value="1-2_ganger"
                  class="hidden peer/lite"
                  required
                  id="freq-lite"
                />
                <label
                  for="freq-lite"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/lite:btn-primary"
                  >1-2 ganger</label
                >

                <input
                  type="radio"
                  name="treningFrekvens"
                  value="3-4_ganger"
                  class="hidden peer/medium"
                  required
                  id="freq-medium"
                />
                <label
                  for="freq-medium"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/medium:btn-primary"
                  >3-4 ganger</label
                >

                <input
                  type="radio"
                  name="treningFrekvens"
                  value="5_eller_flere"
                  class="hidden peer/mye"
                  required
                  id="freq-mye"
                />
                <label
                  for="freq-mye"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/mye:btn-primary"
                  >5 eller flere</label
                >
              </div>
            </div>

            <div class="form-control w-full">
              <label class="label mb-2">
                <span class="label-text text-base sm:text-lg"
                  >Hvilken type trening liker du best?</span
                >
              </label>
              <div class="grid grid-cols-2 sm:flex gap-2 justify-center">
                <input
                  type="radio"
                  name="treningsType"
                  value="styrke"
                  class="hidden peer/styrke"
                  required
                  id="type-styrke"
                />
                <label
                  for="type-styrke"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/styrke:btn-primary"
                  >Styrke</label
                >

                <input
                  type="radio"
                  name="treningsType"
                  value="kondisjon"
                  class="hidden peer/kondisjon"
                  required
                  id="type-kondisjon"
                />
                <label
                  for="type-kondisjon"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/kondisjon:btn-primary"
                  >Kondisjon</label
                >

                <input
                  type="radio"
                  name="treningsType"
                  value="yoga"
                  class="hidden peer/yoga"
                  required
                  id="type-yoga"
                />
                <label
                  for="type-yoga"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/yoga:btn-primary"
                  >Yoga</label
                >

                <input
                  type="radio"
                  name="treningsType"
                  value="sport"
                  class="hidden peer/sport"
                  required
                  id="type-sport"
                />
                <label
                  for="type-sport"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/sport:btn-primary"
                  >Sport</label
                >

                <input
                  type="radio"
                  name="treningsType"
                  value="annet"
                  class="hidden peer/annet"
                  required
                  id="type-annet"
                />
                <label
                  for="type-annet"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/annet:btn-primary"
                  >Annet</label
                >
              </div>
            </div>

            <div class="form-control w-full">
              <label class="label mb-2">
                <span class="label-text text-base sm:text-lg"
                  >Trener du alene eller sammen med andre?</span
                >
              </label>
              <div class="grid grid-cols-1 sm:flex gap-2 justify-center">
                <input
                  type="radio"
                  name="treningsSosial"
                  value="alene"
                  class="hidden peer/alene"
                  required
                  id="sosial-alene"
                />
                <label
                  for="sosial-alene"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/alene:btn-primary"
                  >Alene</label
                >

                <input
                  type="radio"
                  name="treningsSosial"
                  value="sammen_med_andre"
                  class="hidden peer/sammen"
                  required
                  id="sosial-sammen"
                />
                <label
                  for="sosial-sammen"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/sammen:btn-primary"
                  >Sammen med andre</label
                >

                <input
                  type="radio"
                  name="treningsSosial"
                  value="begge_deler"
                  class="hidden peer/begge"
                  required
                  id="sosial-begge"
                />
                <label
                  for="sosial-begge"
                  class="btn btn-sm sm:btn-md flex-1 peer-checked/begge:btn-primary"
                  >Begge deler</label
                >
              </div>
            </div>

            <div class="flex justify-between mt-auto pt-4">
              <a href="/survey" class="btn btn-sm sm:btn-md">Tilbake</a>
              <button type="submit" class="btn btn-primary btn-sm sm:btn-md">
                Neste
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script>
      const form = document.getElementById("treningForm");
      const progressBar = document.getElementById("progressBar");
      const requiredFields = form.querySelectorAll("[required]");

      function updateProgress() {
        const total = requiredFields.length;
        let filled = 0;

        requiredFields.forEach((field) => {
          if (field.type === "radio") {
            const groupName = field.name;
            if (form.querySelector(`input[name="${groupName}"]:checked`)) {
              filled++;
            }
          }
        });

        const progress = (filled / total) * 100;
        progressBar.style.width = `${progress}%`;
      }

      form.addEventListener("input", updateProgress);
    </script>
  </body>
</html>
